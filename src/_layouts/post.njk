---
layout: base.njk
---

<article class="post">
  <header class="post-header">
    <h1>{{ title }}</h1>
    <time datetime="{{ date | dateDisplay }}">{{ date | dateDisplay }}</time>
    {% if tags %}
    <div class="tags">
      {% for tag in tags %}
        {% if tag != "posts" %}
        <span class="tag">{{ tag }}</span>
        {% endif %}
      {% endfor %}
    </div>
    {% endif %}
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>
</article>
