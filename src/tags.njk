---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
    - tagList
permalink: /tags/{{ tag | slugify }}/
layout: base.njk
---

<div class="blog-header">
  <h1>태그: {{ tag }}</h1>
  <p>{{ collections[tag].length }}개의 글</p>
</div>

<section class="posts">
  <ul class="post-list">
    {%- set sortedPosts = collections[tag] | sort(false, false, 'date') | reverse -%}
    {%- for post in sortedPosts -%}
    <li>
      <article>
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <time datetime="{{ post.data.date | dateDisplay }}">{{ post.data.date | dateDisplay }}</time>
        {% if post.data.description %}
        <p>{{ post.data.description }}</p>
        {% endif %}
        {% if post.data.tags %}
        <div class="tags">
          {% for tagItem in post.data.tags %}
            {% if tagItem != "posts" %}
            <a href="/tags/{{ tagItem | slugify }}/" class="tag">{{ tagItem }}</a>
            {% endif %}
          {% endfor %}
        </div>
        {% endif %}
      </article>
    </li>
    {%- endfor -%}
  </ul>
</section>
