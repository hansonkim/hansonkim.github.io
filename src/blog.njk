---
layout: base.njk
title: Blog
permalink: /blog/
---

<div class="blog-header text-center mb-10 px-5 py-10 rounded-2xl">
  <h1 class="mb-8 text-gray-800 font-bold text-2xl">블로그</h1>
  <p class="text-gray-600 text-lg mt-2.5">모든 글 보기</p>
</div>

<section class="posts">
  <ul class="post-list list-none">
    {%- for post in collections.posts -%}
    <li class="mb-6 transition-transform duration-300 ease-in-out">
      <article class="bg-white p-5 md:p-7 rounded-2xl shadow-sm border border-gray-200 transition-all duration-300 ease-in-out relative overflow-hidden hover:shadow-lg hover:-translate-y-1 hover:border-indigo-400">
        <h2 class="mb-2.5 font-bold">
          <a href="{{ post.url }}" class="no-underline text-gray-800 transition-colors duration-300 ease-in-out relative hover:text-indigo-500">{{ post.data.title }}</a>
        </h2>
        <time datetime="{{ post.data.date | dateDisplay }}" class="text-gray-500 text-sm inline-flex items-center mb-3 font-medium">{{ post.data.date | dateDisplay }}</time>
        <p class="text-gray-600 mt-2.5 leading-relaxed">{{ post.data.description }}</p>
        {% if post.data.tags %}
        <div class="tags mt-4 flex gap-2.5 flex-wrap">
          {% for tag in post.data.tags %}
            {% if tag != "posts" %}
            <a href="/tags/{{ tag | slugify }}/" class="tag inline-block px-4 py-1.5 rounded-2xl text-xs font-semibold border transition-all duration-300 ease-in-out hover:-translate-y-0.5 hover:shadow-md">{{ tag }}</a>
            {% endif %}
          {% endfor %}
        </div>
        {% endif %}
      </article>
    </li>
    {%- endfor -%}
  </ul>
</section>
