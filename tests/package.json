{
  "name": "hansonkim-blog-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for blog search functionality",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:perf": "jest tests/unit/performance.test.js",
    "test:a11y": "jest tests/unit/accessibility.test.js",
    "test:korean": "jest tests/unit/korean-text.test.js",
    "test:security": "jest tests/unit/edge-cases.test.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "coverage:open": "open coverage/index.html"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "collectCoverageFrom": [
      "../src/**/*.js",
      "!**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
